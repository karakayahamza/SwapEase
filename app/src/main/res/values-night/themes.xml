<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.SwapEase" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>

    </style>

    <style name="SpinnerDropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <!-- Açılan itemlerin metin renkleri için özel ayarlar -->
        <item name="android:textColor">@color/lavender</item>
    </style>

    <style name="SpinnerItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <!-- Spinner içindeki metin renkleri için özel ayarlar -->
        <item name="android:textColor">@color/lavender</item>
    </style>


    <item name="customColor" type="color">#1C1D22</item>
    <color name="colorPrimary">#495067</color>
    <color name="colorPrimaryDark">#2D3142</color>
    <color name="colorAccent">#848FA5</color>
    <color name="windowBackground">#1C1D22</color>
    <color name="colorPrimaryVariant">#495067</color>
    <color name="colorOnPrimary">#ECEFF4</color>
    <color name="colorControlNormal">#495067</color>
    <color name="colorControlHighlight">#495067</color>
    <color name="colorControlActivated">#495067</color>
    <color name="colorButtonNormal">#ECEFF4</color>
</resources>